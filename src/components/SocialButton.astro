---
const { href, icon, label } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer"
   class="flex items-center justify-center gap-3 px-2 py-1 rounded-full bg-zinc-800 hover:bg-zinc-700 transition-all duration-300 shadow-lg border border-zinc-700 hover:border-zinc-600 focus:ring-2 focus:ring-zinc-500 focus:outline-none">
  
  <i class={icon + " text-xl"}></i>
  <span class="inline">{label}</span>
</a>
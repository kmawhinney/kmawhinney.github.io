---
import { Image } from 'astro:assets';

const { title, description, src, date, company, category } = Astro.props;
---

<div class="card flex flex-row bg-zinc-800 border border-zinc-700 rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:scale-[1.015] my-4 select-none cursor-default" data-category={category}>

    <div class="p-2 self-center sm:self-start">
        <Image src={src} alt={`${title} logo`} class="sm:w-18 sm:h-18 w-12 h-12 object-cover self-center sm:self-start rounded-md" width="12" height="12"/>
    </div>

    <div class="flex-1 sm:p-4 p-2">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-2">
            <div class="flex flex-row items-center gap-1 sm:gap-2">
                <h2 class="sm:text-xl text-lg font-bold">{title}</h2>
                {company && <p class="text-sm text-gray-400 sm:flex hidden">@ {company}</p>}
            </div>

            {date && <p class="text-sm text-gray-400 sm:ml-4">{date}</p>}
        </div>

        <p class="text-sm leading-relaxed">{description}</p>
    </div>
</div>
